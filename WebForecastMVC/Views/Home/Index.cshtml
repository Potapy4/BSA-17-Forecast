@model WebForecastMVC.Models.Weather.Weather

@{
    ViewBag.Title = "Home Page";
}

<div class="row">
    <div class="col-sm-3">
        <form action="/Home/GetForecast/" method="get">
            <div class="form-group">
                <label for="city">Select city:</label>
                <select class="form-control" id="city" name="city">
                    @foreach (string city in ViewBag.Cities)
                    {
                        <option value="@city">@city</option>
                    }
                </select>

                <label for="days">Forecast for:</label><br />
                <label class="radio-inline"><input type="radio" name="days" value="1">Today</label>
                <label class="radio-inline"><input type="radio" name="days" value="3">3 days</label>
                <label class="radio-inline"><input type="radio" name="days" value="7">7 days</label>
            </div>
            <button type="submit" class="btn btn-default center-block">Get Forecast</button>
        </form>
    </div>
    <div class="col-sm-offset-6 col-sm-3">
        <form action="/Home/GetForecast/" method="get">
            <div class="form-group">
                <label for="city">Enter city:</label>
                <input type="text" class="form-control" id="city" name="city" placeholder="Lviv">

                <label for="days">Forecast for:</label><br />
                <label class="radio-inline"><input type="radio" name="days" value="1">Today</label>
                <label class="radio-inline"><input type="radio" name="days" value="3">3 days</label>
                <label class="radio-inline"><input type="radio" name="days" value="7">7 days</label>
            </div>
            <button type="submit" class="btn btn-default center-block">Get Forecast</button>
        </form>
    </div>

    @if (Model != null)
    {
        @Html.Partial("ForecastTable")
    }

</div>