@model IEnumerable<WebForecastMVC.Models.CityViewModel>

@{
    ViewBag.Title = "Favorite Cities";
}

<h2>Favorite Cities:</h2>
<p>
    @Html.ActionLink("Go To Main Page", "Index", new { controller = "Home" }, htmlAttributes: new { @class = "btn btn-default" } )
</p>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
            @Html.ActionLink("Remove", "Remove", new { id = item.Id })
        </td>
    </tr>
}

</table>
