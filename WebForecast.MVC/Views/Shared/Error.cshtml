@model string

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Error</title>
</head>
<body>
    <hgroup>
        <h1>Error.</h1>
        <h2>An error occurred while processing your request.</h2>
        @if (Model != null)
        {
            <h3>Error details: @Model</h3>
        }
    </hgroup>
    <p>
       @Html.ActionLink("Back to Main Page", "Index", new { controller = "Home" }, htmlAttributes: new { @class = "btn btn-default" })
    </p>
</body>
</html>
